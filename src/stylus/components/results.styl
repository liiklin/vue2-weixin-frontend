@import '../base.styl'

// @import '~nib/lib/nib/index' // nib

.modal-mask
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .5)
  display table
  transition opacity .5s ease

.modal-wrapper
  display table-cell
  vertical-align middle

.modal-container
  margin 3%
  border-radius 5px
  height 75%
  transition all .5s ease
  z-index 0

.modal-header
  position relative
  width 100%
  background #72b7f0
  color #fff
  font-size 14px
  background linear-gradient(top,#72b7f0,#2257a2)
  > .modal-header-bottom
    background url('../../assets/bl.svg')
    height 10px !important
    width 100%


.header-bg-userIcon-top
  position fixed
  top 40px
  left 0
  right 0
  text-align center
  margin 0 auto
  .header-bg-top
    border solid 5px rgba(0,0,0,0)
    border-radius 50%
    height 80px
    width 80px
    margin 0 auto
    img
      height 70px
      width 70px
      border-radius 50%
      border solid 5px #fff

.header-bg-userIcon-bottom
  position fixed
  top 40px
  left 0
  right 0
  text-align center
  margin 0 auto
  z-index -1
  .header-bg-bottom
    background-color #71b6ef
    border solid 6px #71b6ef
    border-radius 50%
    height 78px
    width 78px
    margin 0 auto
    img
      height 70px
      width 70px
      border-radius 50%
      border solid 5px #fff


.modal-header-center
  position relative
  width 100% !important
  padding-bottom 10%
  font-size 12px
  color #fff
  &-score
    position absolute
    left 15%
    text-align center
    width auto
    height auto
    &-cricle
      border solid 4px #00f6ff
      border-radius 50%
      height 60px
      width 60px
      color #ffffff
      text-align center
      &-top
        font-size 24px
      &-center
        background #2b5991
        height 1px
        width 43px
        margin-bottom 5px
      &-bottom
        font-size 10px
  &-answer
    position absolute
    width auto
    max-width 50%
    text-align center
    right 5%
    &-bg
      padding 1%
      img
        width 75%
    &-info
      position relative
      color #fff
      font-size 10px
      text-align center
      &-top
        position absolute
        top 30%
        width 100%
        height 100%
        font-size 20px

.footer,
.footer-top,
.footer-center,
.footer-bottom
  width 100% !important

.modal-body
  // width 90%
  // padding 10px 5%
  overflow  auto

.honor
  // font-size 16px
  width 100%
  // height 100%
  &-top
    font-size 16px !important
    color #233b92
    padding 5% 0px
    text-align center
  &-bottom
    font-size 12px !important
    color #a1a1a1 !important

.modal-footer
  width 90%
  padding 2px 5%

.modal-enter
  opacity 0
.modal-leave-active
  opacity 0
.modal-enter .modal-container,
.modal-leave-active .modal-container
  transform scale(1.1)
