@import '../base.styl'
// @import "../components/modal"
// @import '../components/results.styl'

.content
  position relative

.bg
  background #ffffff
  height auto
  width 100%
  img
    height 160px
    width 100%

.top_img
  position absolute
  width 100%
  height auto
  text-align center
  top 135px
  img
    width 130px

.top_title
  position absolute
  width 100%
  height auto
  text-align center
  top 140px
  font-size 14px
  color #ffffff

.top_header
  position absolute
  top 20px
  width 100%
  .top_left
    padding 5px 0px 5px 5%
    > span
      margin 4px
      font-size 12px
      color #ffffff
    .time
      position relative
      text-align center
      color #ff9000
      font-size 20px
      .time_bg
        img
          width 75%
      .time_hour
          position absolute
          top 35%
          left 20%
      .time_moment
          position absolute
          top 35%
          left 65%
  .top_right
    padding 5px 5% 5px 0px
    height auto
    .cricle
      border solid 4px #00f6ff
      border-radius 50%
      height 72px
      width 72px
      color #ffffff
      text-align center
      .cricle_top
        font-size 24px
      .cricle_center
        background  #017da6
        height 1px
        width 70%
        margin-bottom 2px
      .cricle_bottom
        font-size 10px

.content_center
  margin-top 5%
  background #ffffff
  height 100%
  width 100%
  z-index 999
  > div
    > span
      &:nth-child(1)
        font-size 10px
        color #d0d0d0
      &:nth-child(2)
        font-size 12px
        color #ff9b24
      &:nth-child(3)
        font-size 12px
        color #00d2f1
.subject
  margin 10px
  border-radius 5px
  border solid 1px #85e0ff
  background #f3ffff
  div
    padding 3% 5%
    font-size 10px
    &:nth-child(odd)
      border-bottom #d0f3f3
      border-bottom-style solid
      border-bottom-width 1px
.answer
  margin 0px 10px 5px
  background #ffffff
  font-size 12px
  overflow-y scroll
  max-height 170px
  .answer_list
    padding 5px
    color #666666
    i
      padding-right 5px
      font-size 12px !important
  .answer_list_active
    padding 5px
    color #eb005c
    i
      color #eb005c
      font-size 12px !important

.bottom_group
  margin 0px 0px 5px

.chance
  margin 0px 10px
  text-align center
  color #666666
  font-size 10px

.modal-header-bg
  position absolute
  width 100%
  top 0px
  div
    height auto
    img
      width 140px !important
      height 40px !important
.modal-header-title
  position absolute
  top 0px
  width 100%
  height 50px
  span
    color #fff
    font-size 14px
    height 30px
    line-height 30px
